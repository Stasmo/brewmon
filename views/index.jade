extends layout

block content
  div(ng-controller='homeCtrl', class='container')
    .row
      .col-md-12
        h2=title
        hr
    .row
      .col-sm-9.col-md-6
        .panel.panel-default
          .panel-heading
            label Welcome to #{title}
          .panel-body
            p
              label Current Brew:&nbsp
              a(href='{{ currentBrew.recipeUrl }}') {{ currentBrew.name }}
            p
              label Stage:
              &nbspFermentation (started {{ currentBrew.startDT | date }})
            p
              label Last Recorded Temp:
              &nbsp{{ brewData[0].y[brewData[0].y.length - 1] }} at {{ brewData[0].x[brewData[0].x.length - 1].toString() }}
      .col-sm-3.col-md-6
        .panel.panel-default
          .panel-heading
            label Live Temp
          .panel-body
            h1
              &nbsp{{ liveTemp }}Â°C
    .row
      .col-md-12
        .panel.panel-default
          .panel-heading
            label Brew Temperature
          .panel-body
